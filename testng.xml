<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="RegressionSuite">
    <test name="RegressionTests">
        <classes>
            <class name="package1.SetupClass"></class>
            <class name="package1.TestClass1"></class>
            <class name="package1.TestClass2"></class>
            <class name="package1.TestClass3"></class>
        </classes>
    </test>
    
    <test name="SmokeTests">
        <classes>
            <class name="package1.TestClass3"></class>
        </classes>
    </test>
    
    <test name="packageAsATest">
        <packages>
            <package name="package1"></package>
        </packages>
    </test>

</suite>